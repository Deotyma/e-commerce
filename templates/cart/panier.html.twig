{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block main %}
    <main>
        <div id="panier" class="row d-flex justify-content-between align-items-center">
            <div id="shoppingCart" class="container">

                <h1 class="mt-3">Panier</h1> <span class='nb'></span>

                <div class="panier">
                    <div class="contenu-panier">
                        {% if items | length > 0 %}
                            <table class="table text-center">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Produit</th>
                                <th>Prix</th>
                                <th>Quantit√©</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in items %}
                                <tr>
                                    <td align-middle>
                                        <a class="img-fluid" href="{{ path('detail', {id: item.watch.id}) }}">
                                            <img src="{{ vich_uploader_asset (item.watch, 'imageFile') }}"
                                                 class="img-fluid"
                                                 alt="{{ item.watch.name }}" width="80 px">
                                        </a>
                                    </td>
                                    <td align-middle>{{ item.watch.name }}</td>
                                    <td align-middle>{{ item.watch.price }}</td>
                                    <td align-middle>{{ item.quantity }}</td>
                                    <td align-middle>{{ item.watch.price * item.quantity }}</td>
                                    <td>
                                        <a href="{{path('remove_cart', {'id' : item.watch.id})}}" class="btn btn-sm
                                        trash">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>

                            {% endfor %}

                            </tbody>
                                <tfoot>
                                <td colspan="4" class="text-right">Total : </td>
                                <td>{{ total }}</td>
                                <td></td>
                                </tfoot>
                            </table>
                        {% else %}
                            <p>Votre panier est vide</p>
                        {% endif %}

                    </div>

                    {% if items | length > 0  %}

                        {% if is_granted('IS_ANONYMOUS') %}
                            <div class="row justify-content-center">
                                Veuillez vous <a href="{{ path('app_login') }}">connecter</a> ou vous <a href="{{ path
                                    ('app_register')}}">inscrire</a> afin de pouvoir valider le panier.
                            </div>
                        {% else %}
                            <div class="row justify-content-end">
                                    <form action="{{ path('validate_cart') }}" method="post">
                                    <input type="submit" name="valider" value="Valider le panier" class="btn
                                    btn-success">
                                </form>
                            </div>
                        {% endif%}

                        <div class="row justify-content-start">
                            <a href="{{ path('delete_cart') }}" class="btn btn-danger">Vider le Panier</a>
                        </div>

                    {% endif %}

                </div> <!-- fin panier -->

            </div>
        </div>

    </main>

{% endblock %}
