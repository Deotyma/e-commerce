{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block main %}
    <div class="container boutiqueCard">
        <div class="row center productsList">
            {% for watch in watchesList %}
                <div class="product col-md-6 col-lg-4">

                    <div class="card" style="width: 18rem;">
                        <a class="watch" href="{{ path('detail', {id: watch.id}) }}">
                            <img src="{{ vich_uploader_asset (watch, 'imageFile') }}" class="card-img-top" alt="{{ watch.name }}">
                            <div class="card-body">
                                <p class="card-text text-center">{{ watch.name }}</p>
                                <p class="text-center">{{watch.price}}â‚¬</p>
                            </div>
                        </a>
                        <div class="text-center mb-2">
                            <a class=" btn btn-light buy " data-name="{{ watch.id }}" href="{{ path('add_cart', {'id':
                                watch.id}) }}">Ajouter</a>
                        </div>

                    </div>

                </div>
            {% endfor %}
            <div class="navigation align-items-center" >
               <p class="text-center"> {{ knp_pagination_render(watchesList)}}</p>
            </div>

        </div>
    </div>
{% endblock %}
